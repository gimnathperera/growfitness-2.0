{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" },
    { "path": "../../packages/shared-schemas/tsconfig.json" },
    { "path": "../../packages/shared-types/tsconfig.json" }
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/types": ["../../packages/shared-types/dist"],
      "@shared/schemas": ["../../packages/shared-schemas/dist"],
      "@grow-fitness/shared-types": ["../../packages/shared-types/dist"],
      "@grow-fitness/shared-schemas": ["../../packages/shared-schemas/dist"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
