# Copy this file to api.env and fill in values before running docker compose
PORT=3000
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/grow-fitness?retryWrites=true&w=majority

# JWT configuration
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL allowed by CORS
CORS_ORIGIN=https://admin.your-domain.com
